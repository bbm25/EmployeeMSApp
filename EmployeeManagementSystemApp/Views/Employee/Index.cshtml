
@model IEnumerable<EmployeeManagementSystemApp.Models.Employee>

@{
    ViewData["Title"] = "Home Page";

}


<h2>Employee Management System</h2>

<p>
    @Html.ActionLink("Create New Employee", "Create")
</p>

    <div class="container mt-3">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="display-4 mb-4">Employees</h2>
            </div>
            <div class="col-md-4 text-right">
                <a class="btn btn-primary" asp-action="Create">Add New Employee</a>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <form method="post" class="form-inline">
                    <div class="form-group mr-3">
                        <label for="FirstName" class="sr-only">First Name:</label>
                    <input class="form-control" type="text" name="FirstName" id="FirstName" placeholder="Search by Firat Name">
                    </div>
                <div class="form-group mr-3">
                    <label for="LastName" class="sr-only">Last Name:</label>
                    <input class="form-control" type="text" name="LastName" id="LastName" placeholder="Search by Last Name">
                </div>
                    <div class="form-group mr-3">
                        <label for="phoneNumber" class="sr-only">Phone Number:</label>
                        <input class="form-control" type="text" name="phoneNumber" id="phoneNumber" placeholder="Search by Phone Number">
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">Search</button>
                    </div>
                </form>
            </div>
        </div>

        <table class="table table-striped table-bordered text-center">

            <thead>
                <tr>
                    <th> First Name</th>
                    <th> Last Name</th>
                    <th>Phone Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
        <div>
            @Html.ActionLink("Edit", "Edit") |
            @Html.ActionLink("Details", "Details") |
            @Html.ActionLink("Delete", "Delete")
        </div>

